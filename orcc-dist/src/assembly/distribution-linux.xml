<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution-linux</id>
  <formats>
    <format>dir</format>
    <format>jar</format>
  </formats>
  <files>
    <file>
      <source>src/main/text/README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/scripts/linux/run.sh</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
      <fileMode>755</fileMode>
    </file>
    <file>
      <source>../LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
  <moduleSets>
    <moduleSet>
    
      <!-- Enable access to all projects in the current multimodule build! -->
      <useAllReactorProjects>true</useAllReactorProjects>
      
      <!-- Now, select which projects to include in this module-set. -->
      <includes>
        <include>org.mcuosmipcuter.orcc.api:orcc-api</include>
        <include>org.mcuosmipcuter.orcc.core:orcc-core</include>
        <include>org.mcuosmipcuter.orcc.ert:orcc-ert</include>
        <include>org.mcuosmipcuter.orcc.gui:orcc-gui</include>
      </includes>
      <binaries>
        <outputDirectory>/</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  
  <dependencySets>
    <dependencySet>
    <includes>
    	<include>org.slf4j:slf4j-api</include>
    	<include>io.humble:humble-video-all</include>
    	<include>io.humble:humble-video-noarch</include>
    	<include>io.humble:humble-video-arch-i686-pc-linux-gnu6</include>
    	<include>io.humble:humble-video-arch-x86_64-pc-linux-gnu6</include>    	
    </includes>
   </dependencySet>
   </dependencySets>

</assembly>
